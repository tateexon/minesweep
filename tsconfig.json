{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "sourceMap": true,
        "inlineSources": true,
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "types": ["node"],
        "outDir": "dist/",
        "declaration": true,
        "newLine": "LF",
        "esModuleInterop": true
    },
    "include": [
        "src/**/*ts",
        "tests/**/*ts"
    ]
}